source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '15.0'

# Specify the Xcode project (generated by XcodeGen)
project 'ScoopLiteIOS.xcodeproj'

def iosPods
  use_frameworks!

  # UI Components
  pod 'SnapKit', '~> 5.7.1'
  pod 'NVActivityIndicatorView'
  pod 'SkeletonView'
  pod 'Kingfisher', '~> 7.0'

  # Architecture
  pod 'Swinject'

  # Networking
  pod 'Alamofire', '~> 5.8'
  pod 'Starscream', '~> 4.0.0'
  pod 'Luciq'

  # Auth Flow Dependencies (matching main app)
  pod 'DialCountries'
  pod 'PhoneNumberKit', '~> 3.7'
  pod 'Toast-Swift', '~> 5.0.0'

  # Note: AWS Face Liveness (FaceLiveness) is added via Swift Package Manager
  # See project.yml for SPM package configuration
end

target 'ScoopLiteIOS' do
  iosPods

  target 'ScoopLiteIOSTests' do
    inherit! :search_paths
  end

  target 'ScoopLiteIOSUITests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.generated_projects.each do |project|
    project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      end
    end
  end
end

